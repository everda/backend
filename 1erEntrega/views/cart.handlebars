<div>
    <h1>Carrito</h1>
    <div>
        <h4 class="card-title">Productos</h4>
        <div class="row flex-d">
            {{#each cart}}
            <div class="card">
                <div class="card-header">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <h2 class="product" key="{{id}}"></h2>

                            </div>
                            <div class="col-md-9">
                                <h4 class="card-title">{{title}}</h4>
                                <p class="card-title">descripcion: {{description}}</p>
                                <p class="card-text">precio:{{price}}</p>
                                <p class="card-text">Cantidad:{{quantity}}</p>
                                <p class="card-text">stock: {{stock}}</p>
                                <button class="btn btn-primary" id="btn" key="{{id}}">Eliminar Producto</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <p>No hay productos en el carrito</p>
            {{/each}}

        </div>
    </div>
</div>




<script src="../scripts/cart.js"></script>