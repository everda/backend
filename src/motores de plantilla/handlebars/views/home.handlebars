<div class="container bg">
    <a href="/products">ver productos</a>
    <h1>Ingrese Productos</h1>
        <div class="container ">
            <form action="" method="POST">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                    <label for="price">Precio</label>
                    <input type="number" class="form-control" id="price" name="price" required>
                    <label for="thumbnail">URL de Foto ("https://picsum.photos/200")</label>
                    <input type="url" class="form-control" id="thumbnail" name="thumbnail" pattern="https://.*" value = "https://picsum.photos/200"
                        size="30" required>
                    <button type="submit" class="btn btn-primary" id="btnAdd">Agregar Producto</button>
                </div>
            </form>

        </div>
</div>

