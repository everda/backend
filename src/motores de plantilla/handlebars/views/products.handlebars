<div class="container">
    <a href="/">AgregarProducto</a>
    <h1>lista productos</h1>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">nombre</th>
                    <th scope="col">precio</th>
                    <th scope="col">foto</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{price}}</td>
                    <td><img src="{{thumbnail}}" alt=""></td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="3">No hay productos</td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>