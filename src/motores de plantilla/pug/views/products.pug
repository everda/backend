extends layout.pug
block content
    .container
        a(href="/") Agregar productos
        h1 Lista Productos 
        .container
            table.table 
                thread
                    tr 
                        th Nombre
                        th Precio
                        th Foto
                tbody 
                    each product in products
                        tr
                            td= product.name 
                            td=  product.price 
                            td 
                                img(src=product.thumbnail)
                    else 
                        tr
                            td No hay productos

